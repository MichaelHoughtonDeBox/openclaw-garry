# Mission Control Mongo connection string.
# Example: mongodb+srv://user:pass@cluster0.example.mongodb.net/?retryWrites=true&w=majority
MISSION_CONTROL_MONGO_URI=

# Optional database override (default: mission-control).
MISSION_CONTROL_DB=mission-control

# Optional collection override (default: tasks).
MISSION_CONTROL_TASKS_COLLECTION=tasks

# Optional collection override (default: activities).
MISSION_CONTROL_ACTIVITIES_COLLECTION=activities

# Optional collection override (default: documents).
MISSION_CONTROL_DOCUMENTS_COLLECTION=documents

# -------------------------------------------
# Sherlock incident discovery configuration
# -------------------------------------------

# Official X API bearer token used by Sherlock's X connector.
SHERLOCK_X_BEARER_TOKEN=

# Optional X query override for incident discovery.
SHERLOCK_X_QUERY=(crime OR robbery OR assault OR "suspicious activity") has:geo -is:retweet lang:en

# Optional focus locations for Sherlock (use || separator for multiple values).
# Example: Johannesburg, South Africa||Cape Town, South Africa||Nairobi, Kenya
SHERLOCK_FOCUS_LOCATIONS=Johannesburg, South Africa||Cape Town, South Africa||Durban, South Africa||Pretoria, South Africa||Port Elizabeth, South Africa||Bloemfontein, South Africa||London, United Kingdom||Manchester, United Kingdom||Birmingham, United Kingdom||Leeds, United Kingdom||Glasgow, United Kingdom||Liverpool, United Kingdom||Bristol, United Kingdom||Edinburgh, United Kingdom||Sheffield, United Kingdom||Newcastle upon Tyne, United Kingdom

# Optional X API connector tuning.
SHERLOCK_X_MAX_RESULTS=25
SHERLOCK_X_TIMEOUT_MS=15000
SHERLOCK_GEOCODE_TIMEOUT_MS=8000

# Perplexity connector auth options:
# - Direct Perplexity key: PERPLEXITY_API_KEY (or SHERLOCK_PERPLEXITY_API_KEY)
# - OpenRouter key when routing Perplexity models via OpenRouter: OPENROUTER_API_KEY
SHERLOCK_PERPLEXITY_API_KEY=
PERPLEXITY_API_KEY=
OPENROUTER_API_KEY=

# Optional Perplexity connector tuning.
SHERLOCK_PERPLEXITY_MODEL=sonar-pro
SHERLOCK_PERPLEXITY_API_URL=https://api.perplexity.ai/chat/completions
SHERLOCK_PERPLEXITY_TIMEOUT_MS=25000
SHERLOCK_PERPLEXITY_QUERIES=

# Additive Wolf ingest endpoint configuration.
SHERLOCK_WOLF_INGEST_URL=
SHERLOCK_WOLF_INGEST_TOKEN=
SHERLOCK_WOLF_PRODUCT_TYPE=community
SHERLOCK_WOLF_DISPATCH_ALERTS=false
SHERLOCK_WOLF_INGEST_TIMEOUT_MS=15000

# Stable reporter id used for creator-hash dedupe in Wolf.
SHERLOCK_REPORTER_ID=sherlock-agent

# Sherlock geocoding uses HERE first if HERE_API_KEY is present, then falls back to Nominatim search.
# Reuse the same HERE key used by Wolf where possible.
HERE_API_KEY=
